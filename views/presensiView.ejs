<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Presensi</title>
    <link href="/css/app.css" rel="stylesheet" />
    <script src="/node_modules/socket.io/client-dist/socket.io.js"></script>
    <link
      rel="stylesheet"
      href="/node_modules/flatpickr/dist/flatpickr.min.css"
    />
    <script src="/node_modules/flatpickr/dist/flatpickr.js"></script>
    <script src="/js/index.js"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold text-center mb-4">Presensi</h1>

      <!-- Notification Container -->
      <% if (presensi.errorMssg != null && presensi.errorMssg.trim() !== "") {
      %>
      <div
        class="bg-red-500 text-white text-center py-2 px-4 rounded mb-4 shadow-lg"
      >
        <%= presensi.errorMssg %>
      </div>
      <% } %>

      <table
        id="presensiTable"
        class="w-full table-auto bg-white shadow-md rounded-lg"
      >
        <thead>
          <tr class="bg-gray-200 text-left">
            <th class="px-4 py-2">Nomor</th>
            <th class="px-4 py-2">Nama</th>
            <th class="px-4 py-2">Check-In</th>
            <th class="px-4 py-2">Check-Out</th>
          </tr>
        </thead>
        <tbody>
          <% if (presensi.results.length === 0) { %>
          <tr class="border-b">
            <td colspan="4" class="px-4 py-2 text-center">Tidak ada data</td>
          </tr>
          <% } %> <% if (presensi.results.length > 0) { %> <%
          presensi.results.forEach((item, index) => { %>
          <tr class="border-b">
            <td class="px-4 py-2">
              <%= (presensi.page - 1) * 10 + index + 1 %>
            </td>
            <td class="px-4 py-2">
              <a
                href="<%= item.socialMedia %>"
                target="_blank"
                class="text-blue-600 hover:text-blue-800"
                ><%= item.nama %></a
              >
            </td>
            <td class="px-4 py-2"><%= item.checkin %></td>
            <td class="px-4 py-2"><%= item.checkout %></td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
      <!-- Pagination Controls -->
      <div class="pagination flex justify-center mt-4">
        <% if (presensi.previous) { %>
        <a
          href="/?page=<%= presensi.previous.page %>"
          class="px-4 py-2 bg-blue-600 text-gray-100 rounded hover:bg-blue-800"
          >Previous</a
        >
        <% } %>
        <span class="px-4 py-2">Page <%= presensi.page %></span>
        <% if (presensi.next) { %>
        <a
          href="/?page=<%= presensi.next.page %>"
          class="px-4 py-2 bg-blue-600 text-gray-100 rounded hover:bg-blue-800"
          >Next</a
        >
        <% } %>
      </div>
      <form
        action="/"
        method="POST"
        class="mt-4 bg-white p-4 shadow-md rounded-lg"
      >
        <div class="mb-4">
          <input
            type="text"
            name="nama"
            placeholder="Nama"
            required
            class="w-full p-2 border rounded"
          />
        </div>
        <div class="mb-4">
          <input
            type="text"
            id="checkin"
            name="checkin"
            placeholder="Check-In"
            required
            class="w-full p-2 border rounded"
          />
        </div>
        <div class="mb-4">
          <input
            type="text"
            id="checkout"
            name="checkout"
            placeholder="Check-Out"
            required
            class="w-full p-2 border rounded"
          />
        </div>
        <div class="mb-4">
          <input
            type="text"
            name="socialMedia"
            placeholder="Link Sosial Media"
            required
            class="w-full p-2 border rounded"
          />
        </div>
        <button
          type="submit"
          class="w-full bg-green-500 text-white py-2 px-4 rounded hover:bg-green-700"
        >
          Tambah Presensi
        </button>
      </form>
    </div>
  </body>
</html>
