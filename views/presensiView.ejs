<% if (presensi.successMsg) { %>
  <div class="bg-green-500 text-white text-center py-2 px-4 rounded mb-4 shadow-lg">
      <%= presensi.successMsg %>
  </div>
  <% } %>
  <% if (presensi.errorMsg) { %>
  <div class="bg-red-500 text-white text-center py-2 px-4 rounded mb-4 shadow-lg">
      <%= presensi.errorMsg %>
  </div>
  <% } %>

<div class="table-responsive">
  <table id="presensiTable" class="w-full table-auto bg-white shadow-md rounded-lg">
    <thead>
      <tr class="bg-gray-200 text-left">
        <th class="px-4 py-2">Nomor</th>
        <th class="px-4 py-2">Nama</th>
        <th class="px-4 py-2">User ID</th>
        <th class="px-4 py-2">Check-In</th>
        <th class="px-4 py-2">Check-Out</th>
        <th class="px-4 py-2">Role</th>
        <th class="px-4 py-2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (presensi.results.length === 0) { %>
      <tr class="border-b">
        <td colspan="7" class="px-4 py-2 text-center">Tidak ada data</td>
      </tr>
      <% } %>
      <% if (presensi.results.length > 0) { %>
      <% presensi.results.forEach((item, index) => { %>
      <tr class="border-b">
        <td class="px-4 py-2"><%= (presensi.page - 1) * 5 + index + 1 %></td>
        <td class="px-4 py-2"><%= item.User ? item.User.nama : 'User not found' %></td>
        <td class="px-4 py-2"><%= item.user_id %></td>
        <td class="px-4 py-2"><%= item.clock_in %></td>
        <td class="px-4 py-2"><%= item.clock_out %></td>
        <td class="px-4 py-2"><%= item.User ? item.User.role : 'N/A' %></td>
        <td class="px-4 py-2">
          <div class="bg-gray-100 p-2 rounded shadow-md flex justify-between items-center space-x-2">
            <form onsubmit="submitUpdateForm(event, this)">
              <input type="hidden" name="id" value="<%= item.id %>">
              <input type="hidden" name="user_id" value="<%= item.user_id %>">
              <input type="hidden" name="clock_in" value="<%= item.clock_in %>">
              <input type="datetime-local" name="clock_out" value="<%= item.clock_out ? item.clock_out.toISOString().slice(0, 16) : '' %>">
              <input type="hidden" name="page" value="<%= presensi.page %>"> <!-- Add page parameter -->
              <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">
                Update
              </button>
            </form>
            <form action="/presensi/delete-presensi/<%= item.id %>?page=<%= presensi.page %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this entry?');">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700 delete-button" data-id="<%= item.id %>">
                Delete
              </button>
            </form>
          </div>
        </td>            
      </tr>
      <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<!-- Pagination Controls -->
<div class="pagination flex justify-center mt-4">
  <% if (presensi.previous) { %>
    <a href="/presensi?page=<%= presensi.previous.page %>" class="px-4 py-2 bg-blue-600 text-gray-100 rounded hover:bg-blue-800">Previous</a>
  <% } %>
  <span class="px-4 py-2">Page <%= presensi.page %></span>
  <% if (presensi.next) { %>
    <a href="/presensi?page=<%= presensi.next.page %>" class="px-4 py-2 bg-blue-600 text-gray-100 rounded hover:bg-blue-800">Next</a>
  <% } %>
</div>

<!-- Form Tambah Presensi -->
<form action="/presensi/submit-presensi" method="POST" class="mt-4 bg-white p-4 shadow-md rounded-lg">
  <div class="mb-4">
    <input type="number" name="user_id" placeholder="User ID" required class="w-full p-2 border rounded" />
  </div>
  <div class="mb-4">
    <input type="datetime-local" id="checkin" name="clock_in" placeholder="Check-In" required class="w-full p-2 border rounded" />
  </div>
  <div class="mb-4">
    <input type="datetime-local" id="checkout" name="clock_out" placeholder="Check-Out" class="w-full p-2 border rounded" />
  </div>
  <div class="mb-4">
    <input type="text" name="reason" placeholder="Reason" class="w-full p-2 border rounded" />
  </div>
  <button type="submit" class="w-full bg-green-500 text-white py-2 px-4 rounded hover:bg-green-700">Tambah Presensi</button>
</form>
